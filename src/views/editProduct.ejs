<% title = 'Edit Product' %>

<link rel="stylesheet" href="/css/adminAdmins.css" />
<link rel="stylesheet" href="/css/toast.css" />
<script src="/js/toast.js" defer></script>

<% if (locals.success) { %>
<meta name="flash-success" content="<%= success %>" />
<% } %> <% if (locals.error) { %>
<meta name="flash-error" content="<%= error %>" />
<% } %>

<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card border-0 shadow-sm">
        <div class="card-header bg-white border-0">
          <h4 class="mb-0">
            <i class="fas fa-edit text-primary me-2"></i>
            Edit Product: <%= product.name %>
          </h4>
        </div>
        <div class="card-body">
          <form
            action="/admin/products/edit/<%= product.id %>"
            method="POST"
            enctype="multipart/form-data"
            class="row g-3"
          >
            <div class="col-md-6">
              <label for="name" class="form-label">Product Name</label>
              <input
                type="text"
                class="form-control"
                id="name"
                name="name"
                value="<%= product.name %>"
                required
              />
            </div>
            <div class="col-md-6">
              <label for="cost" class="form-label">Cost (EGP)</label>
              <input
                type="number"
                class="form-control"
                id="cost"
                name="cost"
                min="0"
                step="0.01"
                required
                placeholder="Enter product cost"
                value="<%= product.cost %>"
              />
              <small class="text-muted"
                >The cost to purchase/manufacture this product</small
              >
            </div>
            <div class="col-md-6">
              <label for="price" class="form-label">Price (EGP)</label>
              <input
                type="number"
                class="form-control"
                id="price"
                name="price"
                min="0"
                step="0.01"
                required
                placeholder="Enter selling price"
                value="<%= product.price %>"
              />
              <small class="text-muted"
                >The price customers will pay for this product</small
              >
              <div id="profit-info" class="mt-2 d-none">
                <small>
                  <i class="fas fa-chart-line me-1"></i>
                  <span id="profit-label">Profit</span>:
                  <span id="profit-amount">0</span> EGP (<span
                    id="profit-percentage"
                    >0</span
                  >%)
                </small>
              </div>
            </div>
            <div class="col-md-6">
              <label for="stock" class="form-label">Stock</label>
              <input
                type="number"
                class="form-control"
                id="stock"
                name="stock"
                min="0"
                required
                placeholder="Enter stock quantity"
                value="<%= product.stock %>"
              />
            </div>
            <div class="col-md-6">
              <label for="main_category" class="form-label">Category</label>
              <select
                class="form-select"
                id="main_category"
                name="main_category"
                required
              >
                <option value="">Select Category</option>
                <% categories.forEach(cat => { %>
                <option value="<%= cat.main_category %>" <%= product.main_category === cat.main_category ? 'selected' : '' %>>
                  <%= cat.main_category %>
                </option>
                <% }) %>
              </select>
            </div>
            <div class="col-md-6">
              <label for="sub_category" class="form-label">Subcategory</label>
              <select
                class="form-select"
                id="sub_category"
                name="sub_category"
                required
                data-current-subcategory="<%= product.sub_category %>"
                data-current-main-category="<%= product.main_category %>"
              >
                <option value="">Select Subcategory</option>
                <% if (subcategories && subcategories.length > 0) { %>
                  <% subcategories.forEach(sub => { %>
                    <option value="<%= sub.sub_category %>" <%= product.sub_category === sub.sub_category ? 'selected' : '' %>>
                      <%= sub.sub_category %>
                    </option>
                  <% }) %>
                <% } %>
              </select>
            </div>
            <div class="col-12">
              <label for="description" class="form-label">Description</label>
              <textarea
                class="form-control"
                id="description"
                name="description"
                rows="3"
              ><%= product.description || '' %></textarea>
            </div>

            <!-- Current Images Section -->
            <div class="col-12">
              <label class="form-label">Current Images</label>
              <div class="row g-2">
                <% if (images && images.length > 0) { %>
                  <% images.forEach(image => { %>
                    <div class="col-md-3">
                      <div class="position-relative">
                        <img 
                          src="/uploads/<%= image.image_url %>" 
                          alt="Product Image"
                          class="img-thumbnail"
                          style="width: 100%; max-height: 150px; object-fit: contain;"
                        />
                        <% if (image.is_main) { %>
                          <span class="position-absolute top-0 start-0 badge bg-primary m-1">Main</span>
                        <% } %>
                      </div>
                    </div>
                  <% }) %>
                <% } else { %>
                  <div class="col-12">
                    <p class="text-muted">No images uploaded yet.</p>
                  </div>
                <% } %>
              </div>
            </div>

            <div class="col-12">
              <label for="main_image" class="form-label"
                >Update Main Image</label
              >
              <input
                type="file"
                class="form-control"
                id="main_image"
                name="main_image"
                accept="image/*"
              />
              <small class="text-muted">Leave empty to keep the current main image.</small>
            </div>
            <div class="col-12">
              <label for="additional_images" class="form-label"
                >Add Additional Images (up to 4)</label
              >
              <input
                type="file"
                class="form-control"
                id="additional_images"
                name="additional_images"
                accept="image/*"
                multiple
              />
              <small class="text-muted">You can select up to 4 additional images. These will replace existing images.</small>
            </div>
            <div class="col-12 d-flex justify-content-end gap-2">
              <a href="/admin/products" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Cancel
              </a>
              <button type="submit" class="btn btn-primary">
                <i class="fas fa-save me-2"></i>Update Product
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="/js/editProduct.js" defer></script> 