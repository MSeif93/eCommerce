<% title = 'Error' %>

<div class="container mt-5 error-page">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card shadow-lg border-0">
        <div class="card-body p-5 text-center">
          <!-- Error Icon -->
          <div class="mb-4">
            <i class="fas fa-exclamation-triangle text-danger error-icon"></i>
          </div>

          <!-- Error Title -->
          <h1 class="h2 mb-3 text-danger">Oops! Something went wrong</h1>

          <!-- Error Message -->
          <div class="mb-4">
            <% if (typeof error !== 'undefined' && error) { %>
            <p class="lead text-muted mb-3"><%= error %></p>
            <% } else { %>
            <p class="lead text-muted mb-3">
              We encountered an unexpected error. Please try again later.
            </p>
            <% } %>
            <!-- Error Details -->
            <% if (typeof errorDetails !== 'undefined' && errorDetails) { %>
            <div class="alert alert-light border">
              <small class="text-muted">
                <strong>Error Details:</strong><br />
                <%= errorDetails %>
              </small>
            </div>
            <% } %>
          </div>

          <!-- Error Code (if available) -->
          <% if (typeof errorCode !== 'undefined' && errorCode) { %>
          <div class="mb-4">
            <span class="badge bg-secondary fs-6"
              >Error Code: <%= errorCode %></span
            >
          </div>
          <% } %>

          <!-- Action Buttons -->
          <div class="d-grid gap-2 d-md-flex justify-content-md-center">
            <a
              href="#"
              class="btn btn-outline-secondary btn-lg me-md-2 go-back-btn"
            >
              <i class="fas fa-arrow-left me-2"></i>
              Go Back
            </a>
            <a href="/" class="btn btn-primary btn-lg">
              <i class="fas fa-home me-2"></i>
              Go Home
            </a>
          </div>

          <!-- Additional Help -->
          <div class="mt-4 pt-3 border-top">
            <small class="text-muted">
              <i class="fas fa-info-circle me-1"></i>
              If this problem persists, please contact the administrator.
            </small>
          </div>
        </div>
      </div>

      <!-- Debug Information (only show in development) -->
      <% const showDebug = typeof process !== "undefined" && typeof stack !==
      "undefined" && process.env.NODE_ENV === "development" && stack; %>
      <!-- just a break note -->
      <% if (showDebug) { %>
      <div class="card mt-4 border-warning">
        <div class="card-header bg-warning text-dark">
          <i class="fas fa-bug me-2"></i>
          Debug Information (Development Only)
        </div>
        <div class="card-body">
          <pre class="text-muted small debug-section"><%= stack %></pre>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</div>
