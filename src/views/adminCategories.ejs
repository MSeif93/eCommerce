<% title = 'Admin Categories Management' %>

<!-- Page Header -->
<div class="container-fluid px-4 py-4">
  <div class="row align-items-center mb-4">
    <div class="col">
      <h1 class="h3 mb-0">
        <i class="fas fa-tags text-primary me-2"></i>
        Categories Management
      </h1>
      <p class="text-muted mb-0">Manage product categories and subcategories</p>
    </div>
    <div class="col-auto">
      <button
        class="btn btn-primary"
        data-bs-toggle="modal"
        data-bs-target="#addCategoryModal"
      >
        <i class="fas fa-plus me-2"></i>
        Add New Category
      </button>
    </div>
  </div>

  <!-- Stats Cards -->
  <div class="row g-3 mb-4">
    <div class="col-xl-3 col-md-6">
      <div class="card border-0 shadow-sm">
        <div class="card-body">
          <div class="d-flex align-items-center">
            <div class="flex-shrink-0">
              <div class="bg-primary bg-opacity-10 rounded p-3">
                <i class="fas fa-tags text-primary fs-4"></i>
              </div>
            </div>
            <div class="flex-grow-1 ms-3">
              <h6 class="mb-1 text-muted">Total Categories</h6>
              <h4 class="mb-0 fw-bold"><%= categories.length %></h4>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-xl-3 col-md-6">
      <div class="card border-0 shadow-sm">
        <div class="card-body">
          <div class="d-flex align-items-center">
            <div class="flex-shrink-0">
              <div class="bg-warning bg-opacity-10 rounded p-3">
                <i class="fas fa-layer-group text-warning fs-4"></i>
              </div>
            </div>
            <div class="flex-grow-1 ms-3">
              <h6 class="mb-1 text-muted">Total Subcategories</h6>
              <h4 class="mb-0 fw-bold">
                <%= typeof totalSubcategories !== 'undefined' ?
                totalSubcategories : 0 %>
              </h4>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-xl-3 col-md-6">
      <div class="card border-0 shadow-sm">
        <div class="card-body">
          <div class="d-flex align-items-center">
            <div class="flex-shrink-0">
              <div class="bg-success bg-opacity-10 rounded p-3">
                <i class="fas fa-box text-success fs-4"></i>
              </div>
            </div>
            <div class="flex-grow-1 ms-3">
              <h6 class="mb-1 text-muted">Total Products</h6>
              <h4 class="mb-0 fw-bold">
                <%= typeof totalProducts !== 'undefined' ? totalProducts : 0 %>
              </h4>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-xl-3 col-md-6">
      <div class="card border-0 shadow-sm">
        <div class="card-body">
          <div class="d-flex align-items-center">
            <div class="flex-shrink-0">
              <div class="bg-info bg-opacity-10 rounded p-3">
                <i class="fas fa-eye-slash text-info fs-4"></i>
              </div>
            </div>
            <div class="flex-grow-1 ms-3">
              <h6 class="mb-1 text-muted">Inactive Categories</h6>
              <h4 class="mb-0 fw-bold">
                <%= categories.filter(cat => (cat.product_count || 0) == 0)
                .length %>
              </h4>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Search and Filter -->
  <div class="card border-0 shadow-sm mb-4">
    <div class="card-body">
      <div class="row g-3">
        <div class="col-md-6">
          <div class="input-group">
            <span class="input-group-text bg-light border-end-0">
              <i class="fas fa-search text-muted"></i>
            </span>
            <input
              type="text"
              class="form-control border-start-0"
              id="categorySearch"
              placeholder="Search categories..."
            />
          </div>
        </div>
        <div class="col-md-3">
          <select class="form-select" id="statusFilter">
            <option value="">All Status</option>
            <option value="active">Active (Has Products)</option>
            <option value="inactive">Inactive (No Products)</option>
          </select>
        </div>
        <div class="col-md-3">
          <select class="form-select" id="sortBy">
            <option value="name">Sort by Name</option>
            <option value="products">Sort by Products</option>
            <option value="date">Sort by Date</option>
          </select>
        </div>
      </div>
    </div>
  </div>

  <!-- Categories Table -->
  <div class="card border-0">
    <div class="card-header bg-white border-0 py-3 sticky-top" style="top: 0">
      <h5 class="mb-0 fw-bold">
        <i class="fas fa-list me-2 text-primary"></i>Categories List
      </h5>
    </div>
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table align-middle mb-0" id="categoriesTable">
          <thead class="table-light sticky-top">
            <tr>
              <th class="border-0">Category</th>
              <th class="border-0">Description</th>
              <th class="border-0 text-end">Actions</th>
              <th class="border-0">Subcategories</th>
              <th class="border-0">Products</th>
            </tr>
          </thead>
          <tbody>
            <% if (categoryRows.length === 0) { %>
            <tr>
              <td colspan="8" class="text-center py-5">
                <div class="text-muted">
                  <i class="fas fa-box-open fs-1 mb-3 d-block"></i>
                  <h5>No Categories Found</h5>
                  <p>Start by adding your first category</p>
                  <button
                    class="btn btn-primary"
                    data-bs-toggle="modal"
                    data-bs-target="#addCategoryModal"
                  >
                    <i class="fas fa-plus me-2"></i>
                    Add Category
                  </button>
                </div>
              </td>
            </tr>
            <% } else { %> <% categoryRows.forEach(function(row, index) { %>
            <tr
              class="category-row"
              data-name="<%= row.main_category.toLowerCase() %>"
              data-products="<%= row.product_count || 0 %>"
              data-date="<%= row.created_at %>"
              data-status="<%= (row.product_count || 0) > 0 ? 'active' : 'inactive' %>"
            >
              <% if (row.isFirst) { %>
              <td rowspan="<%= row.rowspan %>" class="align-middle">
                <div class="d-flex align-items-center gap-3">
                  <div class="category-icon-sm flex-shrink-0">
                    <i class="fas <%= row.icon_class || 'fa-tag' %>"></i>
                  </div>
                  <div>
                    <h6 class="mb-0 fw-bold fs-6 text-dark">
                      <%= row.main_category %>
                    </h6>
                  </div>
                </div>
              </td>
              <td rowspan="<%= row.rowspan %>" class="align-middle">
                <p class="mb-0 text-muted" style="max-width: 260px">
                  <%= row.description || 'No description available' %>
                </p>
              </td>
              <td class="text-end" rowspan="<%= row.rowspan %>">
                <div class="btn-group" role="group">
                  <button
                    class="btn btn-sm btn-outline-success add-subcategory-btn"
                    data-id="<%= row.id %>"
                    data-name="<%= row.main_category %>"
                    title="Add Subcategory"
                  >
                    <i class="fas fa-plus"></i>
                  </button>
                  <button
                    class="btn btn-sm btn-outline-primary edit-category-btn"
                    data-id="<%= row.id %>"
                    data-name="<%= row.main_category %>"
                    data-description="<%= row.description %>"
                    data-icon-id="<%= row.icon_id %>"
                    title="Edit Category"
                  >
                    <i class="fas fa-edit"></i>
                  </button>
                  <button
                    class="btn btn-sm btn-outline-danger delete-category-btn"
                    data-id="<%= row.id %>"
                    title="Delete Category"
                  >
                    <i class="fas fa-trash"></i>
                  </button>
                </div>
              </td>
              <% } %>
              <td>
                <% if (row.subcategory_name) { %>
                <span class="subcategory-label mb-1 px-2 py-1 fs-6"
                  ><%= row.subcategory_name %></span
                >
                <!-- Subcategory action buttons -->
                <div class="btn-group ms-2 align-middle" role="group">
                  <button
                    class="btn btn-sm btn-outline-primary edit-subcategory-btn"
                    data-category-id="<%= row.id %>"
                    data-subcategory-id="<%= row.subcategory_id %>"
                    data-subcategory-name="<%= row.subcategory_name %>"
                    title="Edit Subcategory"
                  >
                    <i class="fas fa-edit"></i>
                  </button>
                  <button
                    class="btn btn-sm btn-outline-danger delete-subcategory-btn"
                    data-category-id="<%= row.id %>"
                    data-subcategory-id="<%= row.subcategory_id %>"
                    data-subcategory-name="<%= row.subcategory_name %>"
                    title="Delete Subcategory"
                  >
                    <i class="fas fa-trash"></i>
                  </button>
                </div>
                <% } else { %>
                <span class="text-muted">No subcategories</span>
                <% } %>
              </td>
              <td>
                <span
                  class="product-count-label px-2 py-1 fs-6"
                  title="<%= row.subcategory_product_count || 0 %> products in this subcategory"
                >
                  <%= row.subcategory_product_count || 0 %>
                </span>
              </td>
            </tr>
            <% }); %> <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<!-- Add Category Modal -->
<div
  class="modal fade"
  id="addCategoryModal"
  tabindex="-1"
  aria-labelledby="addCategoryModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="addCategoryModalLabel">
          <i class="fas fa-plus text-primary me-2"></i>
          Add New Category
        </h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <form action="/admin/categories/add" method="POST" id="addCategoryForm">
        <div class="modal-body">
          <div class="row g-3">
            <div class="col-md-6">
              <label for="main_category" class="form-label"
                >Main Category</label
              >
              <input
                type="text"
                class="form-control"
                id="main_category"
                name="main_category"
                required
              />
            </div>
            <div class="col-md-6">
              <label for="addIconCategory" class="form-label"
                >Icon Category</label
              >
              <select class="form-select" id="addIconCategory" required>
                <option value="">Select a category</option>
                <% iconCategories.forEach(category => { %>
                <option value="<%= category.category %>">
                  <%= category.category %>
                </option>
                <% }); %>
              </select>
            </div>
            <div class="col-md-6">
              <label for="addIconDropdown" class="form-label">Icon</label>
              <div class="custom-dropdown">
                <button
                  type="button"
                  class="form-select text-start"
                  id="addIconDropdown"
                  data-bs-toggle="dropdown"
                  aria-expanded="false"
                >
                  <span id="addIconText">Select an icon</span>
                </button>
                <input type="hidden" id="addIconId" name="icon_id" required />
                <ul class="dropdown-menu w-100" id="addIconOptions">
                  <!-- Options will be populated by JavaScript -->
                </ul>
              </div>
            </div>
            <div class="col-12">
              <label for="description" class="form-label">Description</label>
              <textarea
                class="form-control"
                id="description"
                name="description"
                rows="3"
                placeholder="Describe this category..."
                required
              ></textarea>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button
            type="button"
            class="btn btn-secondary"
            data-bs-dismiss="modal"
          >
            Cancel
          </button>
          <button type="submit" class="btn btn-primary">
            <i class="fas fa-save me-2"></i>
            Save Category
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

